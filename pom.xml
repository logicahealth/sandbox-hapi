<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>org.hspconsortium.release</groupId>
        <artifactId>hspc-release-spring-boot</artifactId>
        <version>0.4</version>
    </parent>

    <groupId>org.hspconsortium</groupId>
    <artifactId>reference-api-parent</artifactId>
    <version>1.2</version>
    <packaging>pom</packaging>

    <modules>
        <module>reference-api-fhir</module>
        <module>reference-api-mysql</module>
        <module>reference-api-mysql-multitenant</module>
        <module>reference-api-oauth2</module>
        <module>reference-api-smart-support</module>
        <module>reference-api-webapp</module>
        <module>reference-api-webapp-base</module>
        <module>reference-api-webapp-multitenant</module>
    </modules>

    <properties>
        <java.version>1.8</java.version>
        <hapi.version>2.2</hapi.version>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <apache.httpcomponents.version>4.5.2</apache.httpcomponents.version>
        <hibernate_version>5.1.0.Final</hibernate_version>
        <hibernate_validator_version>5.2.4.Final</hibernate_validator_version>
        <hapi.hibernate.search.version>5.5.4.Final</hapi.hibernate.search.version>
        <hapi.hibernate.version>5.1.0.Final</hapi.hibernate.version>
        <hapi.hibernate.validator.version>5.2.4.Final</hapi.hibernate.validator.version>
        <hapi.hibernate.search.version>5.5.4.Final</hapi.hibernate.search.version>
        <hapi.thymeleaf.version>3.0.1.RELEASE</hapi.thymeleaf.version>
        <commons-codec.version>1.10</commons-codec.version>
        <javassist.version>3.20.0-GA</javassist.version>
        <google.gson.version>2.3.1</google.gson.version>
        <guava.version>16.0.1</guava.version>
        <!-- Most artifacts don't need to be executable an executable jar, so skip by default -->
        <springboot_jar.skip>true</springboot_jar.skip>
    </properties>

    <build>
        <plugins>
            <plugin>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-maven-plugin</artifactId>
                <configuration>
                    <!-- Make the executable jar optional -->
                    <skip>${springboot_jar.skip}</skip>
                </configuration>
            </plugin>
        </plugins>
    </build>

</project>